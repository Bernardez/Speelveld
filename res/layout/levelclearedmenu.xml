<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/levelclearedwithscore" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/levelcleared_tomenubutton"
                android:layout_width="85dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/menubutton" />

            <ImageButton
                android:id="@+id/levelcleared_resetbutton"
                android:layout_width="85dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/resetbutton" />

            <ImageButton
                android:id="@+id/levelcleared_nextlevelbutton"
                android:layout_width="85dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/nextlevelbutton" />

        </LinearLayout>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="65dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="31sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="65dp"
            android:layout_marginTop="37dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="31sp" />

    </FrameLayout>

</LinearLayout>