<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/levelselect"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.saxion.act.playground.activities.Level_Select" >

    <ImageButton
        android:id="@+id/level2"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignTop="@+id/level1"
        android:layout_toRightOf="@+id/level1"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/level2" />

    <ImageButton
        android:id="@+id/level4"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignTop="@+id/level3"
        android:layout_toRightOf="@+id/level3"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/level4" />

    <ImageButton
        android:id="@+id/level5"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignTop="@+id/level4"
        android:layout_toRightOf="@+id/level4"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/level5" />

    <ImageButton
        android:id="@+id/level3"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignTop="@+id/level2"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/level3" />

    <ImageButton
        android:id="@+id/level1"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
 
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/level1" />

    <ImageButton
        android:id="@+id/level10"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignLeft="@+id/level5"
        android:layout_below="@+id/level5"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/level10" />

    <ImageButton
        android:id="@+id/level9"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignLeft="@+id/level4"
        android:layout_alignTop="@+id/level10"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/level9" />

    <ImageButton
        android:id="@+id/level8"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignLeft="@+id/level3"
        android:layout_alignTop="@+id/level9"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/level8" />

    <ImageButton
        android:id="@+id/level7"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignLeft="@+id/level2"
        android:layout_alignTop="@+id/level8"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/level7" />

    <ImageButton
        android:id="@+id/level6"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignLeft="@+id/level1"
        android:layout_alignTop="@+id/level7"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/level6" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_above="@+id/level2"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="15dp"
        android:background="@null"
        android:baselineAlignBottom="true"
        android:scaleType="fitCenter"
        android:src="@drawable/backbutton" />

</RelativeLayout>